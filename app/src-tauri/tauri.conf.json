{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Giga Chat",
  "version": "1.0.0",
  "identifier": "ru.gigachat.client",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Giga Chat",
        "center": true,
        "minWidth": 1024,
        "minHeight": 768,
        "resizable": true,
        "maximizable": true,
        "decorations": true,
        "backgroundColor": "#121212"
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        "default",
        "network"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
